<?xml version="1.0"?>
<template
        format="5"
        revision="5"
        name="Kotlin Life Fragment"
        description="Creates a new activity with  "
        minApi="9"
        minBuildApi="9"
        requireAppTheme="true"
        category="Activity">

    <dependency name="android-support-v4" revision="8"/>

    <category value="Kotlin"/>
    <formfactor value="Mobile"/>

    <parameter
            id="head"
            name="Head Name"
            type="string"
            constraints="nonempty"
            default="Main"
            help="The name of the head class to create"/> 
	<parameter
            id="className"
            name="Activity Name"
            type="string"
            constraints="class|unique|nonempty"
			suggest="${head}Fragment"
            default="MainActivity"
            help="The name of the activity class to create"/>

    <parameter
            id="componentClass"
            name="Component Name"
            type="string"
            constraints="class|unique|nonempty"
            suggest="${head}Component"
            default="MainComponent"
            help="The name of the Component to create for the activity"/>

    <parameter
            id="presenterClass"
            name="Presenter Name"
            type="string"
            constraints="nonempty"
            suggest="${head}Presenter"
            default="MainPresenter"
            help="The name of the Presenter"/>

    <parameter
            id="packageName"
            name="Package name"
            type="string"
            constraints="package"
            default="com.mycompany.myapp"/>

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl"/>
    <execute file="recipe.xml.ftl"/>

</template>
